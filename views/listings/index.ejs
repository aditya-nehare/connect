<% layout('layouts/boilerplate') -%>

<body class="bg-transparent">
  <%- include("../includes/carousel") %>
  <div class="container py-4">
    <div class="row g-4">
      <% for (let listing of allListings) { %>
      <div class="col-sm-12 col-md-6 col-lg-3">
        <div class="card h-100 border-0 overflow-hidden">
          <img
            src="<%= listing.image %>"
            class="card-img-top"
            alt="Listing image"
            style="object-fit: cover; border-radius: 15px"
          />
          <div class="card-body d-flex flex-column px-0 pt-2 pb-1">
            <h5 class="fw-semibold text-dark mb-2" style="font-size: 1.1rem">
              <%= listing.title %>
            </h5>
            <p class="text-muted fw-semibold mb-1" style="font-size: 1rem">
              â‚¹<%= listing.price != null ? listing.price.toLocaleString("en-IN")
              : 'N/A' %>
            </p>
          </div>
          <a href="/listings/<%= listing._id %>" class="stretched-link"></a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</body>
