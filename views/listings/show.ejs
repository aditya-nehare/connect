<% layout('layouts/boilerplate') -%>

<body>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <img
          src="<%= listing.image %>"
          alt="Listing image"
          class="img-fluid rounded"
          style="max-height: 700px; object-fit: cover; width: 100%"
        />
      </div>

      <div class="col-md-6 d-flex flex-column justify-content-between">
        <div>
          <h2 class="fw-bold mb-3"><%= listing.title %></h2>
          <p class="text-muted mb-3"><%= listing.description %></p>
          <h4 class="text-primary fw-semibold mb-4">â‚¹<%= listing.price %></h4>

          <a
            href="/listings/<%= listing._id %>/edit"
            class="btn btn-secondary rounded-pill px-4 mb-2"
          >
            Buy Now
          </a>
        </div>

        <div class="mt-4 d-flex gap-2">
          <a
            href="/listings/<%= listing._id %>/edit"
            class="btn btn-outline-secondary rounded-pill px-4"
          >
            Edit Listing
          </a>

          <form
            method="POST"
            action="/listings/<%= listing._id %>?_method=DELETE"
          >
            <button
              type="submit"
              class="btn btn-outline-danger rounded-pill px-4"
            >
              Delete Listing
            </button>
          </form>
        </div>
      </div>
      <div class="mt-5">
        <h5 class="mb-3">Leave a Review</h5>
        <form
          method="POST"
          action="/listings/<%= listing._id %>/reviews"
          class="needs-validation border p-4 bg-white shadow-sm rounded"
          novalidate
        >
          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input
              type="range"
              class="form-range"
              id="rating"
              name="review[rating]"
              min="1"
              max="5"
              required
            />
            <div class="invalid-feedback">
              Please provide a rating between 1 and 5.
            </div>
            <div class="form-text">
              Select a rating between 1 (worst) and 5 (best)
            </div>
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea
              class="form-control"
              id="comment"
              name="review[comment]"
              rows="4"
              placeholder="Write your review here..."
              required
              minlength="10"
              maxlength="500"
            ></textarea>
            <div class="invalid-feedback">
              Comment must be between 10 and 500 characters.
            </div>
          </div>

          <button type="submit" class="btn btn-success rounded-pill px-4">
            Submit Review
          </button>
        </form>
      </div>

      <div class="mt-5">
        <h4 class="mb-4">All Reviews</h4>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% for (let review of listing.review) { %>

          <div class="col">
            <div
              class="card h-100 border border-light-subtle rounded-3"
              style="background-color: #f8f9fa"
            >
              <div class="card-body d-flex flex-column">
                <h6 class="card-title fw-semibold text-dark mb-2">
                  Anonymous User
                </h6>
                <p class="card-text text-body-secondary mb-3">
                  <%= review.comment %>
                </p>

                <div
                  class="d-flex justify-content-between align-items-center mt-auto"
                >
                  <span class="text-dark small">
                    Rating: <%= review.rating %> / 5
                  </span>

                  <form
                    method="POST"
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                  >
                    <button
                      type="submit"
                      class="btn btn-sm btn-outline-danger rounded-pill px-3"
                    >
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>
