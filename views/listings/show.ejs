<% layout('layouts/boilerplate') -%>

<body>
  <div class="container mt-4">
    <div class="row">

      <div class="col-md-6">
        <img
          src="<%= listing.image %>"
          alt="Listing image"
          class="img-fluid rounded"
          style="max-height: 700px; object-fit: cover; width: 100%;"
        />
      </div>


      <div class="col-md-6 d-flex flex-column justify-content-between">
        <div>
          <h2 class="fw-bold mb-3"><%= listing.title %></h2>
          <p class="text-muted mb-3"><%= listing.description %></p>
          <h4 class="text-primary fw-semibold mb-4">â‚¹<%= listing.price %></h4>

          <a
            href="/listings/<%= listing._id %>/edit"
            class="btn btn-secondary rounded-pill px-4 mb-2"
          >
            Buy Now
          </a>
        </div>

        <div class="mt-4 d-flex gap-2">
          <a
            href="/listings/<%= listing._id %>/edit"
            class="btn btn-outline-secondary rounded-pill px-4"
          >
            Edit Listing
          </a>

          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button type="submit" class="btn btn-outline-danger rounded-pill px-4">
              Delete Listing
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
